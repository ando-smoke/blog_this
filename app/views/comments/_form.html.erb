<%= render 'layouts/errors', object: @comment %>

<div class='row'>
  <div class='col-md-6'>
    <%= form_for [@post, @comment] do |f| %>
      <div class='form-group'>
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
