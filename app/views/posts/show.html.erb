<% content_for(:title, 'Post | Blog This!') %>

<h3><%= @post.title %></h3>
<br />
<p><%= @post.body %></p>

<%= link_to 'Edit Post', edit_post_path(@post),
  class: 'btn btn-info' %>
<%= link_to 'Delete Post', post_path(@post),
  { :data => { :method => 'delete' },
    :class => 'btn btn-danger' } %>

<hr />

<%= link_to 'Back to Home Page', posts_path %>
