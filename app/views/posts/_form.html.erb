<%= render 'layouts/errors', object: @post %>

<div class='row'>
  <div class='col-md-6'>
    <%= form_for @post do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control' %>
      </div>

      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
